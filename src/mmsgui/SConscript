Import('env idir_lib idir_inc idir_data')
files = Glob('*.cpp')
files.append(Glob('*/*.cpp'))
libmmsgui = env.SharedLibrary('../../../lib/libmmsgui', files, LIBS = "")
env.Install(idir_lib, libmmsgui)
headers = Glob('../../../inc/mmsgui/*.h')
env.Install(idir_inc + '/mmsgui', headers)
headers = Glob('../../../inc/mmsgui/fb/*.h')
env.Install(idir_inc + '/mmsgui/additional', headers)
headers = Glob('../../../inc/mmsgui/additional/*.h')
env.Install(idir_inc + '/mmsgui/fb', headers)
headers = Glob('../../../inc/mmsgui/interfaces/*.h')
env.Install(idir_inc + '/mmsgui/interfaces', headers)
share = Glob('../../../share/mmsgui/*')
env.Install(idir_data + '/mmsgui', share)
Export('libmmsgui')